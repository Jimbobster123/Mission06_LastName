@model List<Mission06_LastName.Models.Movie>

@{
    // Sets the page title shown in the browser tab
    ViewData["Title"] = "Movie List";
}

<!-- Page heading -->
<h1 class="mb-4">Joel Hilton Movie Collection</h1>

<!-- Responsive table wrapper for smaller screens -->
<div class="table-responsive">

    <!-- Bootstrap styled table -->
    <table class="table table-striped table-hover table-bordered align-middle">

        <!-- Table header -->
        <thead class="table-dark">
        <tr>
            <th>Category</th>
            <th>Title</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Lent To</th>
            <th>Copied To Plex</th>
            <th>Notes</th>

            <!-- Action buttons column -->
            <th class="text-center">Actions</th>
        </tr>
        </thead>

        <!-- Table body -->
        <tbody>

        <!-- Loops through each movie in the model -->
        @foreach (var m in Model)
        {
            <tr>

                <!-- Category name (handles null safely) -->
                <td>@(m.Category?.CategoryName ?? "")</td>

                <!-- Movie details -->
                <td>@m.Title</td>
                <td>@m.Year</td>
                <td>@m.Director</td>
                <td>@m.Rating</td>

                <!-- Displays Yes/No for boolean fields -->
                <td>@(m.Edited == true ? "Yes" : "No")</td>
                <td>@m.LentTo</td>
                <td>@(m.CopiedToPlex == true ? "Yes" : "No")</td>

                <td>@m.Notes</td>

                <!-- Edit and Delete buttons -->
                <td class="text-center" style="width: 150px;">

                    <!-- Edit button routes to Edit action -->
                    <a class="btn btn-sm btn-primary"
                       asp-action="Edit"
                       asp-route-id="@m.MovieId">
                        Edit
                    </a>

                    <!-- Delete button routes to Delete action -->
                    <a class="btn btn-sm btn-danger"
                       asp-action="Delete"
                       asp-route-id="@m.MovieId">
                        Delete
                    </a>
                </td>
            </tr>
        }

        </tbody>
    </table>
</div>