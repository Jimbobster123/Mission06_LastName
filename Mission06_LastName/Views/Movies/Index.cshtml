@model List<Mission06_LastName.Models.Movie>

@{
    ViewData["Title"] = "Movie List";
}

<h1 class="mb-4">Joel Hilton Movie Collection</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-dark">
        <tr>
            <th>Category</th>
            <th>Title</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Lent To</th>
            <th>Copied To Plex</th>
            <th>Notes</th>
            <th class="text-center">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@(m.Category?.CategoryName ?? "")</td>
                <td>@m.Title</td>
                <td>@m.Year</td>
                <td>@m.Director</td>
                <td>@m.Rating</td>
                <td>@(m.Edited == true ? "Yes" : "No")</td>
                <td>@m.LentTo</td>
                <td>@(m.CopiedToPlex == true ? "Yes" : "No")</td>
                <td>@m.Notes</td>
                <td class="text-center">
                    <a class="btn btn-sm btn-primary"
                       asp-action="Edit"
                       asp-route-id="@m.MovieId">
                        Edit
                    </a>
                    <a class="btn btn-sm btn-danger"
                       asp-action="Delete"
                       asp-route-id="@m.MovieId">
                        Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>