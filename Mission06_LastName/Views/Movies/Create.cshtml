@model Mission06_LastName.Models.Movie
@{
    ViewData["Title"] = "Add Movie";
}
@* 
    Create.cshtml
    Displays the form used to add a new movie to the collection.
    Includes validation and dropdown selections.
*@

<h1 class="mb-3">Add a Movie</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Year" class="form-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Director" class="form-label"></label>
                <input asp-for="Director" class="form-control" />
                <span asp-validation-for="Director" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Rating" class="form-label"></label>
                <select asp-for="Rating" asp-items="Html.GetEnumSelectList<Rating>()" class="form-select">
                    <option value="">-- Select Rating --</option>
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Edited</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Edited" value="true" id="editedYes" />
                    <label class="form-check-label" for="editedYes">Yes</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Edited" value="false" id="editedNo" />
                    <label class="form-check-label" for="editedNo">No</label>
                </div>
                <span asp-validation-for="Edited" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LentTo" class="form-label"></label>
                <input asp-for="LentTo" class="form-control" />
                <span asp-validation-for="LentTo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="form-label"></label>
                <input asp-for="Notes" class="form-control" maxlength="25" />
                <div class="form-text">Max 25 characters</div>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save Movie</button>
            <a asp-controller="Movies" asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
